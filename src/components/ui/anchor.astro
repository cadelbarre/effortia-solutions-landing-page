---
interface Props {
    href: string;
    target?: string;
}

const { href, target } = Astro.props;
---

<div class="transition-transform ease-in-out duration-300 hover:-translate-y-1">
    <a
        href={href}
        target={target}
        class="px-8 py-3 font-medium bg-gradient-to-r from-primary to-orange-500 text-white rounded-full shadow-lg shadow-primary/50 cursor-pointer md:text-base text-sm"
    >
        <slot />
    </a>
</div>

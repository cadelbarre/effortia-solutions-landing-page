---
import { twMerge } from "tailwind-merge";

interface Props {
    className?: string;
    id?: string;
}
const { className, id } = Astro.props;
---

<section
    class={twMerge(
        "max-w-6xl mx-auto py-16 lg:py-28 px-6 md:px-10 xl:px-0",
        className,
    )}
    id={id}
>
    <slot />
</section>

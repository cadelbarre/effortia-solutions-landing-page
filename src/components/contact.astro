---
import Section from "@components/ui/section.astro";
import Title from "@components/ui/title.astro";
import Button from "@components/ui/button.astro";

const inputCSS =
    "w-full py-2 px-4 bg-transparent outline-none border border-gray-400 rounded-md";
---

<Section className="grid grid-cols-5 gap-12">
    <div class="col-span-3">
        <header class="space-y-2">
            <Title text="Formulario de Contacto" />
            <p>
                Llene el siguiente formulario y le contactaremos lo antes
                posible
            </p>
        </header>
        <fieldset>
            <form class="grid grid-cols-2 gap-x-8 gap-y-4 mt-8" id="form">
                <label class="block text-gray-800 space-y-1">
                    <span class="font-medium">Nombre</span>
                    <input
                        type="text"
                        id="nombre"
                        name="nombre"
                        placeholder="Carlos Perez"
                        required
                        class={inputCSS}
                    />
                </label>

                <label class="block text-gray-800 space-y-1">
                    <span class="font-medium">Correo Electronico</span>
                    <input
                        type="email"
                        id="email"
                        name="email"
                        placeholder="nicolas@mail.com"
                        required
                        class={inputCSS}
                    />
                </label>

                <label class="block text-gray-800 space-y-1">
                    <span class="font-medium">Celular</span>
                    <input
                        type="text"
                        id="celular"
                        name="celular"
                        placeholder="3001232456"
                        required
                        class={inputCSS}
                    />
                </label>

                <label class="block text-gray-800 space-y-1">
                    <span class="font-medium">Interés</span>
                    <select name="interes" id="interes" class={inputCSS}>
                        <option value="">Seleccione</option>
                        <option value="Desarrollo Web">Desarrollo Web</option>
                        <option value="ecommerce">E-commerce</option>
                        <option value="Aplicacion web">Aplicación Web</option>
                        <option value="Asesoría Profesional"
                            >Asesoría Profesional</option
                        >
                    </select>
                </label>

                <label class="block text-gray-800 space-y-1 col-span-2">
                    <span class="font-medium">Mensaje</span>
                    <textarea
                        cols="10"
                        rows="5"
                        id="mensaje"
                        name="mensaje"
                        placeholder="Estoy interesad@ en..."
                        required
                        class={inputCSS}></textarea>
                </label>

                <Button>Enviar</Button>
            </form>
        </fieldset>
    </div>
    <div class="col-span-2 bg-gray-800 rounded-lg">
        <h3>Información</h3>
    </div>
</Section>

<script>
    const form = document.querySelector("#form");
    form?.addEventListener("submit", (e) => {
        e.preventDefault();
        const target = e.target;

        const data = Object.fromEntries(new FormData(target));
    });
</script>

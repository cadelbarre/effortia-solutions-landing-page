---
const WEPAPP_JOBS = [
  {
    thumbnail: "/clientes/admin-zeyma-1-1200w.webp",
    caption: "Plataforma Administrativa ZEYMA",
    alt: "plataforma-administrativa-imagen",
    galleryName: "plataforma-zeyma",
    images: ["/clientes/admin-zeyma-2-1200w.webp"],
  },
  {
    thumbnail: "/clientes/webapps/ventas-zeyma/ventas-zeyma-1-1200w.webp",
    caption: "Plataforma Ventas ZEYMA",
    alt: "plataforma-ventas-imagen",
    galleryName: "ventas-zeyma",
    images: [
      "/clientes/webapps/ventas-zeyma/ventas-zeyma-2-1200w.webp",
      "/clientes/webapps/ventas-zeyma/ventas-zeyma-3-1200w.webp",
      "/clientes/webapps/ventas-zeyma/ventas-zeyma-4-1200w.webp",
      "/clientes/webapps/ventas-zeyma/ventas-zeyma-5-1200w.webp",
    ],
  },
];
---

<script>
  import { Fancybox } from "@fancyapps/ui";
  import "@fancyapps/ui/dist/fancybox/fancybox.css";

  Fancybox.bind("[data-fancybox]", {});
</script>

<article
  id="webapps"
  class="grid lg:grid-cols-2 gap-x-6 md:gap-x-12 gap-y-8 md:gap-y-10"
>
  <header class="lg:col-span-2 text-start">
    <h2 class="font-bold text-2xl text-primarydark">Aplicaciones Webs</h2>
    <p class="max-w-prose">
      Encargar el desarrollo y la creación de aplicaciones web te asegura una
      solución profesional y adaptada a tus necesidades.
    </p>
  </header>
  {
    WEPAPP_JOBS.map(({ thumbnail, images, caption, galleryName, alt }) => {
      return (
        <div class="col-span-1 relative overflow-hidden rounded-lg shadow-xl group">
          <a
            href={thumbnail}
            data-fancybox={galleryName}
            class="h-[300px] relative"
          >
            <img
              decoding="async"
              src={thumbnail}
              alt={alt}
              class="size-full object-cover object-center"
              loading="eager"
            />
          </a>

          <div class="hidden">
            {images.map((image) => {
              return (
                <a
                  data-fancybox={galleryName}
                  href={image}
                  data-caption={caption}
                >
                  <img decoding="async" src={image} loading="lazy" />
                </a>
              );
            })}
          </div>

          <div class="translate-y-20 group-hover:translate-y-0 transition duration-700 ease-out absolute bottom-0 right-0 z-20 bg-black/50 to-transparent text-white w-full py-4 text-sm text-balance font-bold rounded-b-lg">
            {caption}
          </div>
        </div>
      );
    })
  }
</article>

---
import Navbar from "@components/navbar.astro";
import { slogan, empresa } from "@assets/business-data.json";

const sizeHeader = "w-screen h-screen max-h-[400px] md:max-h-[700px]";
---

<header
    class={`${sizeHeader} bg-fixed bg-[url('/marcos/header-effortia.avif')] bg-no-repeat bg-top bg-cover relative`}
    id="inicio"
>
    <div class={`absolute ${sizeHeader} bg-gray-900/80 z-10 inset-0`}></div>

    <Navbar />

    <div
        class={`${sizeHeader} grid place-content-center text-center absolute z-20 space-y-4 top-0`}
    >
        <h6
            class="text-primary text-xs md:text-base font-extrabold tracking-wider uppercase animate-slide-up-fade"
        >
            Bienvenidos a {empresa}
        </h6>

        <h1
            class="text-white font-extrabold tracking-tight text-2xl md:text-5xl lg:text-7xl text-balance animate-slide-up-fade animate-delay-400 max-w-[20ch]"
        >
            {slogan}
        </h1>
    </div>
</header>
